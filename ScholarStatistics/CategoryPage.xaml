<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage  xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:forms="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             mc:Ignorable="d"
             x:Class="ScholarStatistics.CategoryPage"
              Title="Categories">
    <ContentPage
        Title="General">
        <ScrollView>
            <StackLayout
                Orientation="Vertical">
                <Label
                    VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Center"
                        FontSize="Medium"
                    Text="Categories with the most difference between date of added unofficialy and officialy (in days).">
                </Label>
                <forms:ChartView 
                    x:Name="Chart1"
                    HeightRequest="400"
                    />
                <Label
                    VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Center"
                        FontSize="Medium"
                    Text="Days with maximum.">
                </Label>
                <forms:ChartView 
                    x:Name="Chart2"
                    HeightRequest="400"
                    />
                <Label
                    VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Center"
                        FontSize="Medium"
                    Text="Days with minimum.">
                </Label>
                <forms:ChartView 
                    x:Name="Chart3"
                    HeightRequest="400"
                    />

            </StackLayout>
        </ScrollView>
    </ContentPage>
    <ContentPage
        Title="Map">
        <StackLayout>
            <ActivityIndicator Color="Red" IsRunning="false"  IsVisible="False"
                                   x:Name="activityIndicator"/>
            <maps:Map x:Name="map" 
                      ItemsSource="{Binding Affiliations}">
                <x:Arguments>
                    <maps:MapSpan>
                        <x:Arguments>
                            <maps:Position>
                                <x:Arguments>
                                    <x:Double>52.242947</x:Double>
                                    <x:Double>19.022081</x:Double>
                                </x:Arguments>
                            </maps:Position>
                            <x:Double>10.00</x:Double>
                            <x:Double>10.00</x:Double>
                        </x:Arguments>
                    </maps:MapSpan>
                </x:Arguments>
                <maps:Map.ItemTemplate>
                    <DataTemplate>
                        <maps:Pin Position="{Binding Position}"
                                  Address="{Binding City}"
                                  Label="{Binding Name}" 
                                  InfoWindowClicked="Pin_InfoClicked"/>
                    </DataTemplate>
                </maps:Map.ItemTemplate>
                
            </maps:Map>
        </StackLayout>
    </ContentPage>
    <ContentPage
        Title="Details">
        <ListView
                x:Name="CategoriesView"
                ItemsSource="{Binding Categories}"
                ItemTapped="OnCategoryTapped">
            
        </ListView>
    </ContentPage>
    <ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="HeatMap">
        <StackLayout Margin="20">
            <Label
                    VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Center"
                        FontSize="Medium"
                    Text="Popularity of top ten categories (red is most popular, green less).">
            </Label>
            <!-- WebView needs to be given height and width request within layouts to render. -->
            <WebView x:Name="webView" WidthRequest="1000" HeightRequest="1000" />
        </StackLayout>
    </ContentPage>
</TabbedPage>
